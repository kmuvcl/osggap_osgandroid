<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.openscenegraph.osgcamera" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8"></uses-sdk>
	<uses-feature android:glEsVersion="0x00010001"></uses-feature>
	<uses-permission android:name="android.permission.CAMERA" />
	<uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.autofocus" />

	<application android:label="@string/app_name" android:icon="@drawable/osg">
		<activity android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar.Fullscreen" android:name=".OSGOverlayCamera" android:screenOrientation="landscape">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

	</application>
</manifest>
